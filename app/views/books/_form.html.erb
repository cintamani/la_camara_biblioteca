<%= form_with model: book, class: "book-form" do |form| %>
  <% if book.errors.any? %>
    <div class="error-messages">
      <h3><%= book.errors.count %> <%= book.errors.count == 1 ? "error impide" : "errores impiden" %> guardar este libro:</h3>
      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, "Título" %>
    <%= form.text_field :title, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :author, "Autor" %>
    <%= form.text_field :author %>
  </div>

  <div class="form-group">
    <%= form.label :isbn, "ISBN" %>
    <%= form.text_field :isbn %>
  </div>

  <% if @parent_genres.present? && @parent_genres.any? %>
    <div class="form-group">
      <label>Géneros</label>
      <div class="genre-selector" data-controller="genre-selector">
        <div class="genre-search">
          <input type="text"
                 placeholder="Buscar género..."
                 autocomplete="off"
                 data-genre-selector-target="searchInput"
                 data-action="input->genre-selector#search">
        </div>
        <div class="genre-sections">
          <% @parent_genres.each do |parent| %>
            <div class="genre-section" data-genre-selector-target="parentSection">
              <button type="button" class="genre-section-header" data-action="click->genre-selector#toggle">
                <span class="genre-section-title"><%= parent.name %></span>
                <span class="genre-section-icon">▸</span>
              </button>
              <div class="genre-section-content">
                <% if parent.children.any? %>
                  <% parent.children.sorted.each do |child| %>
                    <label class="genre-option" data-genre-selector-target="option">
                      <%= form.check_box :genre_ids,
                          { multiple: true, checked: book.genre_ids.include?(child.id) },
                          child.id,
                          nil %>
                      <span><%= child.name %></span>
                    </label>
                  <% end %>
                <% else %>
                  <label class="genre-option" data-genre-selector-target="option">
                    <%= form.check_box :genre_ids,
                        { multiple: true, checked: book.genre_ids.include?(parent.id) },
                        parent.id,
                        nil %>
                    <span><%= parent.name %></span>
                  </label>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <small><%= link_to "Gestionar géneros", genres_path %></small>
    </div>
  <% else %>
    <div class="form-group">
      <label>Géneros</label>
      <p class="no-genres">No hay géneros definidos aún. <%= link_to "Crear géneros", genres_path %> para categorizar tus libros.</p>
    </div>
  <% end %>

  <div class="form-actions">
    <%= form.submit book.new_record? ? "Crear Libro" : "Actualizar Libro", class: "btn btn-primary" %>
    <%= link_to "Cancelar", books_path, class: "btn btn-secondary" %>
  </div>
<% end %>
